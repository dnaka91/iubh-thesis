<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Drinkup" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/primaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryDarkColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Drinkup.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.Drinkup.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorOnPrimary">@color/white</item>
    </style>
</resources>
